<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow_700"
    tools:context=".ui.comics.ComicsFragment"
    >

    <include
        android:id="@+id/progress_loading_event"
        layout="@layout/view_loading"
        android:visibility="gone"/>

    <include
        android:id="@+id/error_network_event"
        layout="@layout/view_error"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_list_comic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/dimen_12dp"
        android:padding="@dimen/dimen_2dp"
        />


</LinearLayout>